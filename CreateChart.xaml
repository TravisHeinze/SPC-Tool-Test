<Window x:Class="SPC_Tool.CreateChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPC_Tool"
        mc:Ignorable="d"
        Title="CreateChart" Height="268.8" Width="423.2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="386*"/>
            <ColumnDefinition Width="165*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Plan Name:" HorizontalAlignment="Left" Margin="72,10,0,0" VerticalAlignment="Top"/>
        <Label Content="UCL:" HorizontalAlignment="Left" Margin="109,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.19,0.555"/>
        <Label Content="LCL:" HorizontalAlignment="Left" Margin="112,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.053,-0.883"/>
        <Label Content="USL:" HorizontalAlignment="Left" Margin="109,105,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.238,0.586"/>
        <Label Content="LSL:" HorizontalAlignment="Left" Margin="112,136,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.132,0.523"/>
        <Label Content="CL:" HorizontalAlignment="Left" Margin="117,167,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.594,0.555"/>
        <Label Content="Data Entry:" HorizontalAlignment="Left" Margin="75,196,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="plan_name" HorizontalAlignment="Left" Height="23" Margin="184,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="ucl" HorizontalAlignment="Left" Height="23" Margin="184,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="lcl" HorizontalAlignment="Left" Height="23" Margin="184,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="usl" HorizontalAlignment="Left" Height="23" Margin="184,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="lsl" HorizontalAlignment="Left" Height="23" Margin="184,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="cl" HorizontalAlignment="Left" Height="23" Margin="184,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.467,6.948" Grid.ColumnSpan="2"/>
        <TextBox x:Name="data_entry" HorizontalAlignment="Left" Height="23" Margin="184,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <Button Content="Submit" Grid.Column="1" HorizontalAlignment="Left" Margin="40,207,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
